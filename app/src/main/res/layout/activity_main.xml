<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:clipChildren="false"
        android:clipToPadding="false"
        android:id="@+id/rum51w61f90k"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/surfaceContainerLowest">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:orientation="vertical">



            <LinearLayout
                android:layout_marginTop="50dp"
                android:id="@+id/rborx6y1002"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/animationView"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:lottie_rawRes="@raw/animated_nature"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"/>

                <TextView
                    android:id="@+id/r9ckngzb2p98"
                    android:textColor="@color/shadow"
                    android:textSize="30sp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Sign Up"
                    android:layout_marginBottom="40dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/rlmqd14f2smb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/se7e7e7sw1cr8bf6f6f6"
                android:paddingHorizontal="18dp"
                android:layout_marginBottom="16dp"
                android:layout_marginHorizontal="16dp"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:orientation="vertical">
                <EditText
                    android:id="@+id/rmqtw8v8xt8b"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:background="@android:color/transparent"
                    android:textColor="#BDBDBD"
                    android:hint="Name"
                    android:textSize="@dimen/fontsize_body_large"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/r25yjljxicdo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/se7e7e7sw1cr8bf6f6f6"
                android:paddingHorizontal="18dp"
                android:layout_marginBottom="16dp"
                android:layout_marginHorizontal="16dp"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:orientation="vertical">
                <EditText
                    android:id="@+id/rlibwwje5mzh"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:background="@android:color/transparent"
                    android:textColor="#BDBDBD"
                    android:hint="Email"
                    android:textSize="@dimen/fontsize_body_large"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ratu2syh26y"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:background="@drawable/se7e7e7sw1cr8bf6f6f6"
                android:paddingHorizontal="18dp"
                android:layout_marginBottom="33dp"
                android:layout_marginHorizontal="16dp"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:orientation="horizontal">
                <EditText
                    android:layout_weight="100"
                    android:id="@+id/rwxgnoa15cqq"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:background="@android:color/transparent"
                    android:textColor="#BDBDBD"
                    android:hint="Password"
                    android:textSize="@dimen/fontsize_body_large"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:inputType="textPassword"
                    />
                <TextView
                    android:layout_weight="0.5"
                    android:id="@+id/reug7s6n0r9l"
                    android:textColor="#5DB074"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/fontsize_body_large"
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:text="Show"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/r4es381c1skn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginHorizontal="16dp"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:orientation="horizontal">
                <CheckBox
                    android:id="@+id/rs25x8mcg29m"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/se7e7e7sw1cr4bf6f6f6"
                    android:orientation="vertical">
                </CheckBox>

                <TextView
                    android:id="@+id/rd7fjcbsvfm"
                    android:textColor="#666666"
                    android:textSize="@dimen/fontsize_body_medium"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="I would like to receive your newsletter and other promotional information."
                    />
            </LinearLayout>
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingVertical="19dp"
                android:layout_marginBottom="20dp"
                android:layout_marginHorizontal="16dp"
                android:backgroundTint="#5DB074"
                android:textColor="@color/surfaceContainerLowest"
                android:textSize="@dimen/fontsize_body_large"
                android:text="Sign Up"



                />
            <TextView
                android:id="@+id/ri6tdggx2ddn"
                android:textColor="#5DB074"
                android:textSize="@dimen/fontsize_body_large"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="Forgot your password?"
                android:textAlignment="center"
                />

        </LinearLayout>
    </ScrollView>



</LinearLayout>